@{
    ViewData["Title"] = "Turismo Local";
    var testimonios = ViewBag.Testimonios as List<ProyectoFinalSistemasIntegrados.Models.Testimonio>;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- Header y Menú de Navegación -->
    <header class="container">
        <div class="d-flex justify-content-between align-items-center py-3">
            <div class="logo"><h3>🌆 Turismo Local</h3></div>
            <nav>
                <a href="#inicio" class="me-3">Inicio</a>
                <a href="#lugares" class="me-3">Lugares</a>
                <a href="#recursos" class="me-3">Recursos</a>
                <a href="#testimonios" class="me-3">Testimonios</a>
                <a href="#contacto">Contacto</a>
            </nav>
            <a href="#lugares" class="btn btn-primary">Explora Ahora</a>
        </div>
    </header>

    <section id="inicio" class="hero text-center">
        <div class="overlay"></div>
        <div class="hero-content">
            <h1>Explora tu Ciudad</h1>
            <p>Descubre lugares únicos, cultura y experiencias cerca de ti</p>
            <a href="#lugares" class="btn btn-light mt-3">Ver Lugares</a>
        </div>
    </section>


    <!-- Sección Lugares -->
    <section id="lugares" class="container my-5">
        <h2 class="text-center mb-5">Lugares Imperdibles</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="imagenes/simonbolivar.jpeg" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Parque Simon Bolivar</h5>
                        <p class="card-text">Un lugar perfecto para caminar y disfrutar del aire libre.</p>
                        <a href="#" class="btn btn-primary">Ver Más</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="imagenes/parquenacional.jpeg" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Museo Nacional</h5>
                        <p class="card-text">Descubre la historia y cultura de tu ciudad en este museo.</p>
                        <a href="#" class="btn btn-primary">Ver Más</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="imagenes/monserrate.jpeg" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Monserrate</h5>
                        <p class="card-text">El símbolo más reconocido de la ciudad, ideal para fotos.</p>
                        <a href="#" class="btn btn-primary">Ver Más</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección Recursos -->
    <section id="recursos" class="container my-5">
        <h2 class="text-center mb-5">Guías y Recursos</h2>
        <ul class="list-group">
            <li class="list-group-item"><a href="#">Mapa PDF de la ciudad</a></li>
            <li class="list-group-item"><a href="#">Video guía de turismo local</a></li>
            <li class="list-group-item"><a href="#">Artículo cultural destacado</a></li>
        </ul>
        <a href="#" class="btn btn-primary mt-3">Descarga Recursos</a>
    </section>

    <!-- Sección Testimonios -->
    <section id="testimonios" class="container my-5">
        <h2 class="text-center mb-4">Lo que dicen nuestros visitantes</h2>
        <div class="row">
            @if (testimonios != null && testimonios.Count > 0)
            {
                foreach (var item in testimonios)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card p-3">
                            <h5>@item.Nombre</h5>
                            <p>@item.Mensaje</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center">Aún no hay testimonios. ¡Sé el primero en dejar el tuyo!</p>
            }
        </div>

        <h3 class="mt-5">Deja tu testimonio</h3>
        <form asp-controller="Testimonios" asp-action="Create" method="post">
            <div class="form-group mb-2">
                <label for="Nombre">Nombre</label>
                <input type="text" name="Nombre" class="form-control" required />
            </div>
            <div class="form-group mb-2">
                <label for="Mensaje">Mensaje</label>
                <textarea name="Mensaje" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Enviar</button>
        </form>
    </section>

    <!-- Sección Contacto -->
    <section id="contacto" class="container my-5">
        <h2 class="text-center mb-4">Contacto</h2>
        <form>
            <div class="mb-3">
                <label>Nombre</label>
                <input type="text" class="form-control" required />
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input type="email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label>Mensaje</label>
                <textarea class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
        <p class="mt-3">Teléfono: 123-456-7890 | Dirección: Calle Falsa 123</p>
    </section>

    <!-- Footer -->
    <footer class="text-center py-4">
        <div>
            <a href="#" class="me-3">Facebook</a>
            <a href="#" class="me-3">Twitter</a>
            <a href="#">Instagram</a>
        </div>
        <p class="mt-2">© 2025 Turismo Local. Todos los derechos reservados.</p>
    </footer>

</body>
</html>
